<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	mc:Ignorable="d"
	x:Class="KryssGenerator.AddRemove"
	d:DesignWidth="1000" d:DesignHeight="500">

    <DockPanel x:Name="AddRemoveLayoutRoot">
        <!-- Knappar för att ta sig runt på sidan -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="10">
            <Button Height="30" Padding="5" Margin="5,0" Content="&lt; Tillbaka" Click="Button_Click"/>
        </StackPanel>

        <!-- Huvudrubrik -->
        <StackPanel Orientation="Vertical" DockPanel.Dock="Top" Margin="3,0,0,0">
            <Label FontSize="32" HorizontalAlignment="Center">Kryssgenerator - Lägg till/Ta bort</Label>
        </StackPanel>

        <!-- Listbox där deltagare hamnar -->
        <StackPanel Orientation="Vertical" DockPanel.Dock="Left">
            <Label FontSize="21" Content="Lägg till deltagare som fattas i listan (För- och efternamn)." HorizontalAlignment="Left"/>
            <TextBox Name="TextBoxAdd" TextChanged="TextBoxAdd_TextChanged" />
            <Button Content="Updatera listan" Name="Uppdatera" Click="Uppdatera_Click" />
        </StackPanel>
    </DockPanel>
</UserControl>