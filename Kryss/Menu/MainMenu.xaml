<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	mc:Ignorable="d"
	x:Class="KryssGenerator.MainMenu"
	d:DesignWidth="1000" d:DesignHeight="500"
    Loaded="UserControl_Loaded">
    
    <!-- Gör så att allt är centrerat på skärmen oavsett storlekt på fönstret -->
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="500">
    <DockPanel x:Name="mainMenuLayoutRoot">
        <!-- Knappar för att ta sig runt på sidan -->
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="0, 5" HorizontalAlignment="Left">
            <Button Content="Slumpa" Height="30" Padding="5" Margin="0,0,5,0"  x:Name="Slumpa" Click="Slumpa_Click" />
            <Button Content="Lägg till/Ta bort" Height="30" Padding="5" Margin="0,0,5,0" x:Name="LaggTillTaBort" Click="LaggTillTaBort_Click"/>
            <Button Content="Antal frågor" Height="30" Padding="5" Margin="0,0,5,0"  x:Name="antalFragor" Click="antalFragor_Click" />
        </StackPanel>
        
        <!-- Huvudrubrik -->
        <StackPanel Orientation="Vertical" DockPanel.Dock="Top" Margin="3,0,0,0">
            <Label FontSize="40" HorizontalAlignment="Center" FontWeight="SemiBold">Kryssgenerator</Label>
        </StackPanel>
        
        <!-- Listbox där deltagare hamnar -->
        <StackPanel HorizontalAlignment="Left" Orientation="Vertical" DockPanel.Dock="Top" Margin="0,0,0,3">
            <Label Content="Deltagare för dagens kryssuppgift. Markera de uppgifter du vill vara med på." FontSize="14" Margin="0,0,0,5" />
             
            <!-- Datagrid där deltagare och checkboxar hamnar -->
            <DataGrid AutoGenerateColumns="False" Name="dataGrid1" DataContext="{Binding Tables[Namn]}" ItemsSource="{Binding}" IsSynchronizedWithCurrentItem="True" Background="Transparent" BorderBrush="Transparent">
                <DataGrid.Columns>
                    <DataGridTextColumn x:Name="Deltagare" Header="Deltagare" Binding="{Binding Deltagare}" FontSize="14" FontWeight="Normal"></DataGridTextColumn>
                    <DataGridCheckBoxColumn Header="{Binding MyString}"  Binding="{Binding MyBool}"/>
                    </DataGrid.Columns>
            </DataGrid>
            </StackPanel>
        </DockPanel>
    </StackPanel>
</UserControl>