<Window x:Class="Kryss.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
Title="Kryssningsslumpare" Height="500" Width="800" MaxHeight="800" MaxWidth="1200">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="10">
            <Button Content="Slumpa" Height="23" Name="Random_knapp" Width="75" Click="Random_knapp_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
            <ListBox Name="comboPeople" Margin="5" Padding="8" DisplayMemberPath="FirstName" Width="150" ItemsSource="comboP" Background="Bisque"/>
            <StackPanel Name="sp" Margin="10, 5" DataContext="{Binding ElementName=comboPeople, Path=SelectedItem}" Width="300" Background="AliceBlue">
                <Label Name="lblFName" FontWeight="Bold"/>
                <Label Name="lbllName"/>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Window>